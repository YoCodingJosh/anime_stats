<%- include("header.ejs") %>
<div id="content" class="container">
  <h1><%= errorData.title %></h1>
  <p><%= errorData.message %></p>
  <img id="errorImage" style="display: block;" class="imageResponsive">
  <small>HTTP <%= errorData.httpCode %></small>
  <br/>
  <small>State: <%= errorData.state %> </small>
  <br/>
  <button type="button" id="retryButton" class="btn btn-secondary btn-lg">Go Back Home</button>
</div>
<script>
  $(document).ready(function() {
    // Set random error image.
    $("#errorImage").prop("src", getRandomErrorGif());

    // Clear local storage to remove old session.
    window.localStorage.clear();
  });

  $("#retryButton").click(function() {
    window.location.href = "/";
  });
</script>
